{
    "$schema": "https://turbo.build/schema.json",
    "ui": "tui",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "check-eslint": {
            "inputs": ["$TURBO_DEFAULT$", "$TURBO_ROOT$/tsconfig.json", "$TURBO_ROOT$/packages/eslint-config/**/*"]
        },
        "check-typescript": {
            "inputs": ["$TURBO_DEFAULT$", "$TURBO_ROOT$/tsconfig.json"]
        },
        "preview": {
            "dependsOn": ["build"],
            "cache": false,
            "persistent": true
        }
    }
}
